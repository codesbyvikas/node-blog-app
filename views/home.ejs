<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')  %>
    <title>Homepage</title>
</head>
<body>
    <%- include('./partials/nav')  %>

    <div class="container m-3 row row-cols-4 mx-auto">
        <% blogs.forEach(element => { %>
            <div class="card m-3 col" style="width: 18rem;">
                <img src="<%= element.coverImageUrl %>" class="card-img-top" alt="cover image">
                <div class="card-body">
                    <h5 class="card-title"><%= element.title %></h5>
                    <a href="/blog/<%= element._id %>" class="btn btn-primary">Read More</a>
                </div>
            </div>
        <% }) %>
    </div>

    <%- include('./partials/scripts')  %>
</body>
</html>
