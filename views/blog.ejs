<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')  %>
   <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav')  %>
        <div class="container">
            <h1><%=blog.title%></h1>
            <img src="<%=blog.coverImageURL %>" alt="" width="750px">
            <p><%= blog.body %></p>
        </div>

        <div class="container mt-3">
            <img src="<%= blog.createdBy.profileImageUrl %>"  width="100px"> 
            <%=blog.createdBy.fullName%>
        </div>

        <div class="container mt-3" >
            <h3>Comments <%= comments.length %></h3>
           <% if (locals.user) { %>
            <div class="container mt-4">
                <form action="/blog/comment<%= blog._id %>" method="post">
                    <div class="mb-3">
                      <input type="text" 
                        class="form-control" 
                        id="content" 
                        name="content"
                        placeholder="Enter your comment"
                        >
                    </div>
                    <button type="Post" class="btn btn-primary">Submit</button>
                  </form> 
                  <div class="container mt-3">
                    <% comments.forEach(comment => { %>
                        <div>            <img src="<%= comment.createdBy.profileImageUrl %>"  width="70px"> <img src="" alt="">
                            <%= comment.createdBy.fullName %>: <%= comment.content %>
                        </div>
                    <% }) %>
                  </div>
            </div>
           <% } %>
        </div>
    <%- include('./partials/scripts')  %>
</body>
</html>